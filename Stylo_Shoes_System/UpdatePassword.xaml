        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UpdatePassword"  Height="600" Width="850" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="./Resources/service.png" Margin="62,49,584,361" Canvas.ZIndex="1"/>
        <Image Source="./Resources/log1.jpg" Margin="-171,-23,-133,0"  />
        <Label Content="UPDATE PASSWORD" HorizontalAlignment="Left" Margin="282,110,0,0" VerticalAlignment="Top" Width="376" Height="60" FontSize="32" FontFamily="David"/>
        <Label Content="USERNAME" HorizontalAlignment="Left" Margin="155,278,0,0" VerticalAlignment="Top" Width="105" FontSize="16" RenderTransformOrigin="0.5,-0.047" FontFamily="David"/>
        <Label Content="NEW PASSWORD" HorizontalAlignment="Left" Margin="155,321,0,0" VerticalAlignment="Top" Width="174" FontSize="16" FontFamily="David"/>
        <Label Content="CONFIRM PASSWORD" HorizontalAlignment="Left" Margin="155,370,0,0" VerticalAlignment="Top" Width="207" FontFamily="david" FontSize="16"/>
