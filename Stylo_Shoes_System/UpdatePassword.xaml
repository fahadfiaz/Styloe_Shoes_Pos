                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF513B3B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="UPDATE" HorizontalAlignment="Left" Margin="455,420,0,0" VerticalAlignment="Top" Width="104" Height="30" FontSize="16" RenderTransformOrigin="0.486,2.118" Click="Button_Click_2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF513B3B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="46" Margin="282,110,0,0" VerticalAlignment="Top" Width="320"/>
        <Border BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left" Height="71" Margin="265,99,0,0" VerticalAlignment="Top" Width="352"/>
        <Border BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left" Height="260" Margin="155,232,0,0" VerticalAlignment="Top" Width="422"/>


    </Grid>
