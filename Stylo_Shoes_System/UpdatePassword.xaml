        <TextBox Name="pass" HorizontalAlignment="Left" Height="32" Margin="348,315,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="177" FontSize="14"/>
        <TextBox Name="cpass" HorizontalAlignment="Left" Height="32" Margin="348,364,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="177" FontSize="14"/>
        <Button Content="BACK" HorizontalAlignment="Left" Margin="348,420,0,0" VerticalAlignment="Top" Width="70" Height="30" FontSize="16" Click="Button_Click_1">
